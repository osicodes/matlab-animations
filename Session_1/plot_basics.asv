%% Animated plot

t = 0:0.1:30;

y_t = 0.9*exp(-1.4*t) - 0.9*exp(-0.3*t).*cos(1.4*t) + 0.7 * exp(-0.3*t).*sin(1.4*t);

% figure('Name',"Response plot")
% 
% plot(t,y_t,'Color','r','LineWidth',2)
% xlabel('time')
% ylabel('y(t)')
% legend('Response y(t)')

axis([0,30,-0.4,0.8])
% h = animatedline;
h = animatedline('Color','r','LineWidth',3,"Marker","o");
for k = 1:length(t)
    addpoints(h,t(k),y_t(k));
    % drawnow
    % pause(0.05)
    
end
